  aria-labelledby="about-heading"
>
  <div class="flex flex-col lg:flex-row gap-5 h-full">
    <div class="flex flex-col w-full lg:w-1/2 h-full relative">
      <div class="rounded-lg overflow-hidden relative">
        <img
          src="./img/ramfis-v.jpg"
          alt="Dr. Ramfis Nieto, especialista en medicina interna y nutrición"
          class="w-full h-[375px] md:h-[500px] object-cover"
          loading="lazy"
          width="650"
          height="500"
        />
        <div class="bg-main/20 absolute inset-0"></div>
      </div>
      <div
