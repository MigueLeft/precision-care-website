  /* Custom scrollbar */
  ::-webkit-scrollbar {
    width: 8px;
  }
  
  ::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 4px;
  }
  
  ::-webkit-scrollbar-thumb {
    background: #009aff;
    border-radius: 4px;
  }
  
  ::-webkit-scrollbar-thumb:hover {
    background: #0080cc;
  }
</style>

<script>
  // Search functionality
  const searchInput = document.getElementById('searchInput') as HTMLInputElement;
  const sortSelect = document.getElementById('sortSelect') as HTMLSelectElement;
  const postsContainer = document.getElementById('postsContainer');
  const loadMoreBtn = document.getElementById('loadMoreBtn');
  const loadMoreContainer = document.getElementById('loadMoreContainer');
  
  let currentPage = 1;
  const postsPerPage = 9;
  let allPosts: NodeListOf<Element>;
  let filteredPosts: Element[] = [];
  
  // Initialize
  document.addEventListener('DOMContentLoaded', () => {
    allPosts = document.querySelectorAll('.post-card');
    filteredPosts = Array.from(allPosts);
    showPosts();
    
    // Search functionality
    searchInput?.addEventListener('input', handleSearch);
    sortSelect?.addEventListener('change', handleSort);
    loadMoreBtn?.addEventListener('click', loadMorePosts);
  });
  
  function handleSearch() {
    const searchTerm = searchInput.value.toLowerCase();
    filteredPosts = Array.from(allPosts).filter(post => {
      const title = post.querySelector('h4')?.textContent?.toLowerCase() || '';
      const excerpt = post.querySelector('p')?.textContent?.toLowerCase() || '';
      return title.includes(searchTerm) || excerpt.includes(searchTerm);
    });
    
    currentPage = 1;
    showPosts();
  }
  
  function handleSort() {
    const sortValue = sortSelect.value;
    
    filteredPosts.sort((a, b) => {
      if (sortValue === 'newest') {
        const dateA = new Date(a.querySelector('.text-blue-200')?.textContent?.split('•')[0].trim() || '');
        const dateB = new Date(b.querySelector('.text-blue-200')?.textContent?.split('•')[0].trim() || '');
        return dateB.getTime() - dateA.getTime();
      } else if (sortValue === 'oldest') {
        const dateA = new Date(a.querySelector('.text-blue-200')?.textContent?.split('•')[0].trim() || '');
        const dateB = new Date(b.querySelector('.text-blue-200')?.textContent?.split('•')[0].trim() || '');
        return dateA.getTime() - dateB.getTime();
      } else if (sortValue === 'title') {
        const titleA = a.querySelector('h4')?.textContent || '';
        const titleB = b.querySelector('h4')?.textContent || '';
        return titleA.localeCompare(titleB);
      }
      return 0;
    });
    
    currentPage = 1;
    showPosts();
  }
  
  function showPosts() {
    // Hide all posts first
    allPosts.forEach(post => {
      (post as HTMLElement).style.display = 'none';
    });
    
    // Show filtered posts for current page
    const startIndex = 0;
    const endIndex = currentPage * postsPerPage;
    const postsToShow = filteredPosts.slice(startIndex, endIndex);
    
    postsToShow.forEach((post, index) => {
      (post as HTMLElement).style.display = 'block';
      (post as HTMLElement).style.animationDelay = `${index * 50}ms`;
    });
    
    // Show/hide load more button
    if (loadMoreContainer) {
      if (endIndex >= filteredPosts.length) {
        loadMoreContainer.style.display = 'none';
      } else {
        loadMoreContainer.style.display = 'block';
      }
    }
    
    // Update posts container
    if (postsContainer) {
      if (filteredPosts.length === 0) {
        postsContainer.innerHTML = `
          <div class="col-span-full text-center py-12">
            <svg class="w-16 h-16 text-white/30 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 12h6m-6-4h6m2 5.291A7.962 7.962 0 0112 15c-2.34 0-4.291-1.007-5.824-2.562M15 6.306a7.962 7.962 0 00-6 0m6 0V4a2 2 0 00-2-2h-2a2 2 0 00-2 2v2.306z"></path>
            </svg>
            <p class="text-xl text-white/70">No se encontraron artículos</p>
            <p class="text-white/50 mt-2">Intenta con otros términos de búsqueda</p>
          </div>
        `;
      }
    }
  }
  
  function loadMorePosts() {
    currentPage++;
    showPosts();
    
    // Smooth scroll to new content
    setTimeout(() => {
      const newPosts = document.querySelectorAll('.post-card:nth-child(n+' + ((currentPage - 1) * postsPerPage + 1) + ')');
      if (newPosts.length > 0) {
        newPosts[0].scrollIntoView({ behavior: 'smooth', block: 'start' });
      }
    }, 100);
  }
  
  // Intersection Observer for animations
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  };
  
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('animate-in');
      }
    });
  }, observerOptions);
  
  // Observe all post cards
  document.querySelectorAll('.post-card').forEach(card => {
    observer.observe(card);
  });
</script>
