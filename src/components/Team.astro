---
import FacebookIcon from "./assets/FacebookIcon.astro";
import InstagramIcon from "./assets/InstagramIcon.astro";
---

<section id="team" class="scroll-mt-[70px]">
  <div class="max-w-[1300px] mx-auto px-5 md:px-10 lg:px-14 py-12 lg:py-14">
    <div class="flex flex-col items-center font-semibold">
      <h3 class="text-2xl text-[#009aff]">Nuestro Equipo</h3>
      <p class="text-2xl md:text-3xl lg:text-4xl text-center text-main/90">
        Profesionales comprometidos con tu bienestar
      </p>
    </div>
    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-10 md:gap-4 mt-10 h-full"
    >
      {
        [
          {
            specialty: "Internista",
            name: "Ramfis Nieto",
            marginTop: "mt-0",
          },
          {
            specialty: "Psicologo",
            name: "Lucia Druetta",
            marginTop: "mt-0 md:mt-12",
            image: "/img/lucia.jpg",
            imageClass: "object-center",
          },
          {
            specialty: "Fisiologo",
            name: "Joel Peña",
            marginTop: "mt-0",
            image: "/img/joel.jpg",
            imageClass: "object-bottom",
          },
          {
            specialty: "Internista",
            name: "María Inés",
            marginTop: "mt-0 md:mt-12",
          },
        ].map((member) => (
          // <div class={`flex flex-col items-center gap-4 bg-main/90 rounded-lg overflow-hidden ${member.marginTop}`}>
          //   <div class={`flex items-center justify-center w-full bg-slate-300`}>
          //     <img src={member.image} alt="">
          //   </div>
          //   <div class="flex flex-col items-center justify-center font-semibold text-center">
          //     <p class="text-[#009aff]">{member.specialty}</p>
          //     <p class="text-lg text-white">{member.name}</p>
          //     <div class="flex justify-center gap-2">
          //       <InstagramIcon classname="w-8 h-8 text-white cursor-pointer hover:opacity-75" />
          //       <FacebookIcon classname="w-8 h-8 text-white cursor-pointer hover:opacity-75" />
          //     </div>
          //   </div>
          // </div>

          <div
            class={`${member.marginTop} bg-main/90 rounded-lg overflow-hidden shadow-lg h-min lg:h-[417px]`}
          >
            <div class="aspect-square w-full relative overflow-hidden bg-slate-300">
              <img
                src={member.image}
                alt={member.name}
                class={`w-full h-full object-cover ${member.imageClass}`}
              />
            </div>

            <div class="p-4 flex flex-col items-center space-y-2">
              <p class="text-[#009aff] font-semibold">{member.specialty}</p>
              <h3 class="text-lg font-bold text-white">{member.name}</h3>

              <div class="flex space-x-4 mt-2">
                {/* Instagram Icon */}
                <button class="text-white hover:text-blue-400 transition-colors">
                  <InstagramIcon classname="w-8 h-8 text-white cursor-pointer hover:opacity-75" />
                </button>

                {/* Facebook Icon */}
                <button class="text-white hover:text-blue-400 transition-colors">
                  <FacebookIcon classname="w-8 h-8 text-white cursor-pointer hover:opacity-75" />
                </button>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
