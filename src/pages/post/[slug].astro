import { urlForImage } from "../../sanity/lib/url-for-image";
import PortableText from "../../components/PortableText.astro";
import Layout from "../../layouts/Layout.astro";

export async function getStaticPaths() {
  const { data: posts } = await loadQuery<SanityDocument[]>({
    query: `*[_type == "post"]`,
  });

  return posts.map(({ slug }) => {
    return {
      params: {
        slug: slug.current,
      },
    };
  });
}

const { params } = Astro;

// Consulta mejorada para obtener más datos del post
const { data: post } = await loadQuery<{
  title: string;
  body: any[];
  mainImage: any;
  _createdAt: string;
  author: { name: string; image: any };
  categories: { title: string }[];
  excerpt: string;
  estimatedReadingTime: number;
}>({
  query: `*[_type == "post" && slug.current == $slug][0]{
    title,
    body,
    mainImage,
    _createdAt,
    "author": author->{name, image},
    "categories": categories[]->{title},
    "excerpt": pt::text(body[_type == "block"][0...2]),
    "estimatedReadingTime": round(length(pt::text(body)) / 5 / 180)
  }`,
  params,
});

// Obtener posts relacionados
const { data: relatedPosts } = await loadQuery<SanityDocument[]>({
  query: `*[_type == "post" && slug.current != $slug][0...3]{
    title,
    slug,
    mainImage,
    _createdAt
  }`,
  params,
});

// Función para formatear fecha
function formatDate(dateString) {
  if (!dateString) return 'Fecha no disponible';
  return new Date(dateString).toLocaleDateString('es-ES', {
    day: 'numeric',
    month: 'long',
    year: 'numeric'
  });
}

// Función para generar excerpt del body
function generateExcerpt(text, length = 150) {
  if (!text) return 'Sin contenido disponible...';
  return text.length > length ? text.substring(0, length) + '...' : text;
}

// Metadatos para SEO
const metaDescription = post.excerpt ? generateExcerpt(post.excerpt, 160) : `Artículo sobre ${post.title}`;
const ogImage = post.mainImage ? urlForImage(post.mainImage).width(1200).height(630).url() : '/og-image-default.jpg';
