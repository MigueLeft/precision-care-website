---
import { loadQuery } from "../sanity/lib/load-query";
import { urlForImage as urlFor } from "../sanity/lib/url-for-image";

// Obtener todos los posts publicados ordenados por fecha
const { data: posts } = await loadQuery({
  query: `*[_type == "post"] | order(_createdAt desc)`,
});

// Separar el post principal (más reciente) y los otros posts
const [featuredPost, ...otherPosts] = posts || [];

// Función para formatear fecha
function formatDate(dateString) {
  if (!dateString) return 'Fecha no disponible';
  return new Date(dateString).toLocaleDateString('es-ES', {
    day: 'numeric',
    month: 'short',
    year: 'numeric'
  });
}

// Función para generar excerpt del body
function generateExcerpt(body, length = 150) {
  if (!body || !Array.isArray(body)) return 'Sin contenido disponible...';
  
  const textBlocks = body.filter(block => block._type === 'block' && block.children);
  if (textBlocks.length === 0) return 'Sin contenido disponible...';
  
  const firstBlock = textBlocks[0];
  const text = firstBlock.children
    .filter((child) => child._type === 'span' && child.text)
    .map((child) => child.text)
    .join('');
  
  return text.length > length ? text.substring(0, length) + '...' : text;
}

// Función para obtener tiempo de lectura estimado
function getReadingTime(body) {
  if (!body || !Array.isArray(body)) return '1 min';
  
  const textBlocks = body.filter(block => block._type === 'block' && block.children);
  const wordCount = textBlocks.reduce((count, block) => {
    const text = block.children
      .filter((child) => child._type === 'span' && child.text)
      .map((child) => child.text)
      .join('');
    return count + text.split(' ').length;
  }, 0);
  
  const readingTime = Math.ceil(wordCount / 200); // 200 palabras por minuto
  return `${readingTime} min`;
}
