---
import FacebookIcon from "./assets/FacebookIcon.astro";
import InstagramIcon from "./assets/InstagramIcon.astro";
---

<div class="bg-main py-16 px-4">
  <div class="max-w-6xl mx-auto">
    <div class="font-bold text-center mb-16">
      <h3 class="text-2xl text-[#009aff]">Nuestro Equipo</h3>
      <p class="text-2xl md:text-3xl lg:text-4xl text-center text-white">
        Profesionales comprometidos con tu bienestar
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-16">
      {
        [
          {
            name: "Ramfis Nieto",
            role: "Internista",
            description:
              "Especializado en medicina interna, cuento con años de experiencia en el diagnóstico y tratamiento de enfermedades crónicas.",
            imageSrc: "/img/ramfis.webp",
          },
          {
            name: "Lucia Druetta",
            role: "Psicologo",
            description:
              "Psicóloga clínica con amplia experiencia en terapia cognitivo-conductual y terapia de aceptación y compromiso.",
            imageSrc: "/img/lucia.webp",
          },
          {
            name: "Joel Peña",
            role: "Fisiologo",
            description:
              "Fisiólogo con un enfoque en la fisiología del ejercicio y la nutrición, ayudando a pacientes a alcanzar sus objetivos de salud.",
            imageSrc: "/img/joel.webp",
          },
          {
            name: "María Inés",
            role: "Internista",
            description:
              "Internista con una pasión por la medicina preventiva y la educación al paciente, enfocándose en la prevención de enfermedades.",
            imageSrc: "/img/maria.webp",
          },
        ].map((member) => (
          <div class="flex flex-col lg:flex-row lg:gap-6 items-center text-center">
            <div class="relative mb-4">
              <div class="w-48 h-48 rounded-full overflow-hidden border-4 border-[#00cccc]">
                <img
                  src={member.imageSrc}
                  alt={member.name}
                  class="w-full h-full object-cover"
                />
              </div>
            </div>
            <div class="flex flex-col items-start text-left">
              <h3 class="text-xl font-bold text-white mb-1">{member.name}</h3>
              <p class="text-[#00cccc] mb-3">{member.role}</p>
              <p class="text-gray-300 text-sm mb-4 max-w-xs">
                {member.description}
              </p>
              <div class="flex space-x-2">
                <a
                  href="#"
                  class="p-2 bg-gray-800 rounded-full hover:bg-gray-700 transition-colors"
                >
                  <FacebookIcon classname="w-8 h-8 text-white cursor-pointer hover:opacity-75" />
                </a>
                <a
                  href="#"
                  class="p-2 bg-gray-800 rounded-full hover:bg-gray-700 transition-colors"
                >
                  <InstagramIcon classname="w-8 h-8 text-white cursor-pointer hover:opacity-75" />
                </a>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</div>
