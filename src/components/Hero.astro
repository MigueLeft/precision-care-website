<!-- Hero.astro Optimizado para SEO -->
<main
  class="flex justify-center items-center h-[470px] md:h-[630px] 2xl:h-[90dvh] border-b border-slate-500 relative overflow-hidden pt-[70px] md:pt-[115px]"
  role="banner"
  aria-labelledby="hero-title"
>
  <header class="flex flex-col items-center gap-4 z-10">
    <h1
      id="hero-title"
      class="text-center text-3xl md:text-4xl lg:text-5xl 2xl:text-6xl text-[#40f7f7] font-bold"
    >
      Salud personalizada
      <span class="block">desde cualquier lugar</span>
    </h1>
    
    <h3
      class="text-center text-lg md:text-xl 2xl:text-2xl text-white font-semibold px-2"
    >
      Soluciones de salud de calidad, <span class="block"
        >justo a tiempo</span
      >
    </h3>
    
    <div class="flex justify-center h-full w-full">
      <a 
        href="#contact" 
        class="bg-[#40e2e2] h-14 w-1/2 lg:w-1/3 rounded-lg px-2 text-base md:text-lg text-main font-semibold flex items-center justify-center no-underline transition-colors hover:bg-[#36d4d4] focus:outline-none focus:ring-2 focus:ring-[#40e2e2] focus:ring-offset-2"
        aria-label="Agendar cita médica - Contactar con nuestros servicios de salud personalizada"
        role="button"
      >
        Agenda tu cita
      </a>
    </div>
  </header>

  <div 
    class="absolute inset-0 bg-main opacity-25 z-[5]" 
    aria-hidden="true"
  ></div>
  
  <img
    class="h-full w-full object-cover object-bottom absolute inset-0"
    src="/img/background.jpg"
    alt="Profesionales de la salud brindando atención médica personalizada en consultorio moderno"
    loading="eager"
    fetchpriority="high"
    width="1920"
    height="1080"
    role="img"
    aria-hidden="true"
  />
</main>