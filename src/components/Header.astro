---
import FacebookIcon from "./assets/FacebookIcon.astro";
import InstagramIcon from "./assets/InstagramIcon.astro";
// Assuming MobileMenu is still needed and handled elsewhere for mobile view,
// though it's commented out in the provided code.
// import MobileMenu from "./MobileMenu";
---

<header
  class="w-full fixed flex 2md:flex-col h-[70px] 2md:h-[100px] text-black z-40 bg-white"
  role="banner"
  aria-label="Encabezado principal del sitio"
>
  <div
    class="flex justify-between items-center max-w-[1300px] px-5 2md:px-7 lg:px-14 mx-auto w-full"
  >
    <a href="/" aria-label="Ir a la página de inicio de Precision Care">
      <img
        src="/img/logo.png"
        alt="Logo de Precision Care"
        class="h-[45px] lg:h-[50px]"
        width="150"
        height="50"
        loading="eager"
        fetchpriority="high"
      />
    </a>

    <div class="hidden 2md:flex items-center gap-6">
      <div class="flex gap-3">
        <a
          href="https://www.instagram.com/dr.ramfisnieto?igsh=YzR0cjRzc3psN3Rh"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Visitar el perfil de Instagram del Dr. Ramfis Nieto"
        >
          <InstagramIcon
            classname="w-7 h-7 2xl:w-8 2xl:h-8 cursor-pointer hover:opacity-75"
            aria-hidden="true"
            focusable="false"
          />
        </a>
      </div>
      <a href="#contact" aria-label="Agenda tu cita de contacto">
        <button
          class="flex items-center gap-3 font-bold h-[60px] bg-main 2xl:text-lg text-white px-5"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-7 h-7 2xl:w-8 2xl:h-8"
            viewBox="0 0 24 24"
            fill="currentColor"
            aria-hidden="true"
            focusable="false"
          >
            <title>Icono de Calendario</title> {/* Added title for SVG */}
            <path
              d="M12 12h5v5h-5zm7-9h-1V1h-2v2H8V1H6v2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2m0 2v2H5V5zM5 19V9h14v10z"
            ></path>
          </svg>
          <p>Agenda tu cita</p>
        </button>
      </a>
    </div>

    <div class="flex items-center gap-3 2md:hidden">
      <div class="flex gap-3">
        <a
          href="https://www.instagram.com/dr.ramfisnieto?igsh=YzR0cjRzc3psN3Rh"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Visitar el perfil de Instagram del Dr. Ramfis Nieto (Móvil)"
        >
          <InstagramIcon
            classname="w-7 h-7 2xl:w-8 2xl:h-8 cursor-pointer hover:opacity-75"
            aria-hidden="true"
            focusable="false"
          />
        </a>
      </div>
      {/* MobileMenu component is commented out in your original code, but if used, ensure its internal links are optimized */}
      </div>
  </div>
  <div
    class="hidden 2md:flex items-center bg-white text-black h-[45px] w-full border-t border-black"
  >
    <div
      class="flex justify-between items-center max-w-[1300px] px-5 2md:px-10 lg:px-14 mx-auto w-full"
    >
      <nav aria-label="Menú de navegación principal del sitio" class="w-full px-5">
        <ul class="flex justify-between gap-5 font-semibold text-sm">
          <li><a href="/#why">Nosotros</a></li>
          <li><a href="/#services">Líneas de servicio</a></li>
          <li><a href="/#solutions">Soluciones</a></li>
          <li><a href="/#programs">Programas</a></li>
          <li><a href="/#team">Nuestro equipo</a></li>
          <li><a href="/#faq">Preguntas frecuentes</a></li>
        </ul>
      </nav>
    </div>
  </div>
</header>